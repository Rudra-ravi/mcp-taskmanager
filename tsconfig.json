{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"lib": ["ES2020"],
		"types": ["node", "@cloudflare/workers-types"],
		"outDir": "dist",
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
